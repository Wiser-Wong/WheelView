<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wiser.wheel.WheelView
        android:id="@+id/wv_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:wv_autoFitTextSize="true"
        app:wv_lineSpacing="15dp"
        app:wv_selectedItemPosition="0"
        app:wv_textSize="40sp" />

    <com.wiser.pickerview.DatePickerView
        android:id="@+id/date_picker_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal" />

    <com.wiser.linkageview.OptionsPickerView
        android:id="@+id/opv_view"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
</LinearLayout>